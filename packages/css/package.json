{
  "name": "@compassion-gds/css",
  "version": "0.0.1",
  "description": "Compassion International's Global Design System",
  "scripts": {
    "start": "npm run build && npm run storybook",
    "clone:themes": "git clone --filter=blob:none https://github.com/compassion-global-experience/cds-tokens.git && cp -r cds-tokens/themes/ ./themes/ && rm -rf cds-tokens",
    "build": "npm run clone:themes && npm run transform && npm run generate-css-vars && npm run bundle-css",
    "bundle-css": "rollup -c",
    "transform": "npm run transform-light && npm run transform-dark",
    "transform-light": "npx token-transformer themes tokens/_cds-light/tokens.json core/cds-core,cds-light/theme-cds-light,components/accordion,components/alert,components/background,components/badge,components/breadcrumb,components/button,components/card,components/dropdown,components/form,components/grid,components/header,components/modal,components/pagination,components/spacing,components/tab,components/table,components/toast,components/tooltip,components/type core/cds-core,cds-light/theme-cds-light",
    "transform-dark": "npx token-transformer themes tokens/_cds-dark/tokens.json core/cds-core,cds-dark/theme-cds-dark,components/accordion,components/alert,components/background,components/badge,components/breadcrumb,components/button,components/card,components/dropdown,components/form,components/grid,components/header,components/modal,components/pagination,components/spacing,components/tab,components/table,components/toast,components/tooltip,components/type core/cds-core,cds-dark/theme-cds-dark",
    "generate-css-vars": "node ./generate-css-vars.js",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "npm run build && storybook build --quiet"
  },
  "files": [
    "dist",
    "src",
    "assets",
    "reset.css"
  ],
  "exports": {
    "./reset.css": "./reset.css",
    "./light.css": "./dist/light.css",
    "./dark.css": "./dist/dark.css",
    "./src/": "./src/",
    "./assets/": "./assets/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/compassion-global-experience/compassion-design-system",
    "directory": "packages/css"
  },
  "keywords": [
    "compassion",
    "compassion-gds",
    "gds",
    "css"
  ],
  "author": "Compassion XD",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/compassion-global-experience/compassion-design-system/issues"
  },
  "homepage": "https://github.com/compassion-global-experience/compassion-design-system#readme",
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@storybook/addon-actions": "^7.0.0-beta.43",
    "@storybook/addon-essentials": "^7.0.0-beta.43",
    "@storybook/addon-interactions": "^7.0.0-beta.43",
    "@storybook/addon-links": "^7.0.0-beta.43",
    "@storybook/html": "^7.0.0-beta.43",
    "@storybook/html-webpack5": "^7.0.0-beta.43",
    "@storybook/testing-library": "^0.0.14-next.1",
    "babel-loader": "^8.3.0",
    "postcss-import": "^15.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.13.0",
    "rollup-plugin-postcss": "^4.0.2",
    "storybook": "^7.0.0-beta.43",
    "style-dictionary": "^2.10.2"
  }
}
